#include <cs50.h>
#include <stdio.h>

long get_number(void);
int get_length(long number);
int get_checksum(long number, int length);
int get_result(int finalsum, int length);
long get_firstdigits(long number, int length);

int main(void)
{
    // Ask for credit number
    long number = get_number();

    // Get number length
    int length = get_length(number);

    // Calculate checksum
    int checksum = get_checksum(number, length);

    // Get first digits
    int firstdigits = get_firstdigits(number, length);

    // Print result
    if (checksum % 10 == 0)
    {
        if (length == 15 && (firstdigits == 34 || firstdigits == 37))
        {
            printf("AMEX\n");
        }
        else if ((length == 13 || length == 16) && firstdigits / 10 == 4)
        {
            printf("VISA\n");
        }
        else if (length == 16 && firstdigits > 50 && firstdigits < 56)
        {
            printf("MASTERCARD\n");
        }
        else
        {
            printf("INVALID\n");
        }
    }
    else
    {
        printf("INVALID\n");
    }

}

long get_number(void)
{
    long n;
    do
    {
        n = get_long("Number: ");
    }
    while (n < 1);

    return n;
}

int get_length(long number)
{
    int i = 0;
    do
    {
        number = number / 10;
        i++;
    }
    while (number > 0);

    return i;
}

int get_checksum(long number, int length)
{
    // Set variables
    int sum = 0;

    // Sum digits according to algorithm
    for (int i = 0; i < length; i++)
    {
        // Get the last digit
        int digit = number % 10;

        if (i % 2 == 0) // Checks if last or second-to-last
        {
            // Sum digits
            sum = sum + digit;
        }
        else
        {
            // Sum digits of digit multiplied by 2
            int digitsum = digit * 2;
            if (digitsum > 9)
            {
                sum = sum + digitsum % 10 + 1;
            }
            else
            {
                sum = sum + digitsum;
            }
        }
        // Update the number without last digit checked
        number = (number - digit) / 10;
    }

    return sum;
}

long get_firstdigits(long number, int length)
{
    long power = 10;
    for (int i = 1; i < length - 2; i++)
    {
        power = power * 10;
    }

    return number / power;
}
